{{#each ideas}}
<div class="card card-body mb-4">
<h3>{{title}}</h3>
<P>{{details}}</P>
<a class="btn btn-outline-dark btn-block" href="ideas/edit/{{id}}">Edit</a>
<br>
<form action="/ideas/{{id}}?_method=DELETE"method="POST" >
  <input type="hidden" name="_method" value="DELETE">
<input type="submit" class="btn btn-outline-danger btn-block" value="Delete">
</div>
{{else}}
<p>There is no ideas yet</p>

{{/each}}